{
  "name": "eventhescore-node",
  "version": "1.0.0",
  "description": "A simple app for keeping scores of games!",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clear": "rm -r dist",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --type-check --fix",
    "lint": "tslint -c tslint.json -p tsconfig.json --type-check --format codeFrame --force",
    "watch": "tsc-watch --project tsconfig.json --onSuccess \"yarn lint\""
  },
  "devDependencies": {
    "@types/hapi": "^16.1.7",
    "@types/pg": "^6.1.43",
    "tsc": "^1.20150623.0",
    "tsc-watch": "^1.0.7",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "hapi": "^16.5.0",
    "pg": "^7.0.2"
  }
}
