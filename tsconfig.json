{
    "compilerOptions": {
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "noUnusedLocals": true,
        "target": "es5",
        "removeComments": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "useTranspileModule": true
    }
}